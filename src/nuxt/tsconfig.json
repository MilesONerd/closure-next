{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node", "@nuxt/types", "@types/jest"],
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@closure-next/core": ["../../packages/core/src"],
      "@closure-next/core/*": ["../../packages/core/src/*"],
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "#app": ["./node_modules/nuxt/dist/app/index"],
      "#head": ["./node_modules/nuxt/dist/head/runtime/index"],
      "#imports": ["./node_modules/nuxt/dist/app/composables/index"],
      "#components": ["./node_modules/nuxt/dist/app/components/index"]
    },
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "../..",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "../../packages/core/src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/core" }
  ]
}
