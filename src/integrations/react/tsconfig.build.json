{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**/*", "node_modules", "dist"]
}
