{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@closure-next/core": ["../../../packages/core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"],
  "references": [
    { "path": "../../../packages/core/tsconfig.build.json" }
  ]
}
