{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "composite": true,
    "types": ["jest", "node", "vue"],
    "jsx": "preserve",
    "baseUrl": "../../..",
    "paths": {
      "@closure-next/core/*": ["../../../packages/core/src/*"],
      "@closure-next/core": ["../../../packages/core/src"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/__tests__/**"],
  "references": [
    { "path": "../../../packages/core" }
  ]
}
