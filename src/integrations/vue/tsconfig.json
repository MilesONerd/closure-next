{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "paths": {
      "@closure-next/core": ["../../../packages/core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__/**/*"],
  "references": [
    { "path": "../../../packages/core" }
  ]
}
