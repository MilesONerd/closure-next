{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "types": ["node", "react", "jest"],
    "composite": true,
    "paths": {
      "@closure-next/core": ["../../packages/core/src"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/core" }
  ]
}
