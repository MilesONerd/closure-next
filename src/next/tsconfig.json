{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "react", "jest"],
    "baseUrl": ".",
    "paths": {
      "@closure-next/core/*": ["../../packages/core/src/*"],
      "@closure-next/core": ["../../packages/core/src"]
    },
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/core" }
  ]
}
