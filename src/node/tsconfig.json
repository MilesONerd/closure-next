{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../..",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "composite": true
  },
  "references": [
    { "path": "../../packages/core" }
  ],
  "include": [
    "*.ts",
    "__tests__/**/*",
    "../../packages/core/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
