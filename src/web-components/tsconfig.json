{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@closure-next/core": ["../../packages/core/dist"]
    }
  },
  "references": [
    { "path": "../../packages/core" }
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../../packages/core/dist/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
