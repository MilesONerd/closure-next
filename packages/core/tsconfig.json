{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "composite": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@closure-next/core": ["./src"],
      "@closure-next/core/*": ["./src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
