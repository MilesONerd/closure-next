{
  "name": "@closure-next/monorepo",
  "private": false,
  "workspaces": [
    "packages/*",
    "src/integrations/*",
    "src/node",
    "src/web-components",
    "src/webpack",
    "src/vite",
    "src/rollup",
    "src/mobile",
    "src/next",
    "src/nuxt",
    "src/wasm",
    "src/testing"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:core && npm run build:packages",
    "build:core": "cd packages/core && npm run build",
    "build:packages": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "verify-integrations": "npm run test:core && npm run test:integrations && npm run test:platforms && npm run test:tools",
    "test:core": "cd packages/core && npm test",
    "test:integrations": "cd src/integrations && npm run test --workspaces --if-present",
    "test:platforms": "for dir in src/{node,web-components,deno,mobile,next,nuxt,wasm}; do cd $dir && npm test; cd ../..; done",
    "test:tools": "for dir in src/{webpack,vite,rollup,testing}; do cd $dir && npm test; cd ../..; done"
  },
  "devDependencies": {
    "@angular/common": "^19.1.3",
    "@angular/compiler": "^19.1.3",
    "@angular/compiler-cli": "^19.1.3",
    "@angular/core": "^19.1.3",
    "@angular/platform-browser": "^19.1.3",
    "@angular/platform-browser-dynamic": "^19.1.3",
    "@angular/platform-server": "^19.1.3",
    "@testing-library/angular": "^17.3.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vue/compiler-core": "^3.5.13",
    "@vue/compiler-dom": "^3.5.13",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/server-renderer": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.0.0",
    "estree-walker": "^2.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.0.0"
  }
}
